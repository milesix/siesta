# General system specifications ....
SystemName    graphite
SystemLabel   graphite

NumberOfAtoms    4
NumberOfSpecies  1

%block ChemicalSpeciesLabel
    1   6  C
%endblock ChemicalSpeciesLabel

# Structural parameters...

LatticeConstant 2.4763   Ang
%block LatticeParameters
1.000  1.000   2.5971  90.0  90.0  120.0
%endblock LatticeParameters

AtomicCoordinatesFormat fractional

%block AtomicCoordinatesAndAtomicSpecies
  0.33333333  0.66666667  0.0        1     # C
  0.66666667  0.33333333  0.0        1     # C
  0.00000000  0.00000000  0.5        1     # C
  0.66666667  0.33333333  0.5        1     # C
%endblock AtomicCoordinatesAndAtomicSpecies

# Simulation parameters ...

SolutionMethod         diagon

XC.Functional          LDA
XC.Authors             CA
SpinPolarized          .true.

DM.MixingWeight        0.100     # New DM amount for next SCF cycle
DM.NumberPulay         3
DM.Tolerance           5.0d-5

DM.UseSaveDM         .true.
UseSaveData              T     # default value

# Basis set definition...

PAO.BasisSize        DZP
PAO.EnergyShift       10 meV

# Real space grid...

MeshCutoff           140.0 Ry

# K-sampling (using Monkhorst-Pack allows a better fit to the reduced dimensionality)

%block kgrid_Monkhorst_Pack
  3  0  0    0.0
  0  3  0    0.0
  0  0  2    0.0
%endblock kgrid_Monkhorst_Pack

WriteKbands    .true.
WriteBands    .true.
BandLinesScale     ReciprocalLatticeVectors

%block Bandlines
  1   0.3333333333   0.333333333   0.0000   K
 60   0.0000000000   0.000000000   0.0000   \Gamma
 30   0.0000000000   0.500000000   0.0000   M
 30   0.3333333333   0.333333333   0.0000   K
 20   0.3333333333   0.333333333   0.5000   H
 60   1.0000000000   0.000000000   0.5000   A
 30   0.5000000000   0.500000000   0.5000   L
 30   0.3333333333   0.333333333   0.5000   H
%endblock BandLines

