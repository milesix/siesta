NumberOfAtoms 40
NumberOfSpecies 1

%block ChemicalSpeciesLabel
1       6      C
%endblock ChemicalSpeciesLabel

PAO.EnergyShift 500 meV
PAO.BasisSize DZ

SolutionMethod BLOOM # Cubic-scaling OMM using libOMM library
OMM.Use-Sparse F

OMM.PreconFirstStep 1 # Number of SCF steps in the first MD step for which to apply preconditioning
#OMM.Precon -1        # Number of SCF steps of all MD steps for which to apply preconditioning
OMM.TPreconScale 10 Ry # Scale for kinetic energy preconditioning
OMM.LongOutput true   # Write detailed information for each SCF step to libOMM.log
OMM.Use2D true        # Use 2D data decomposition for parallelization
OMM.Eta -3.8506 eV    # Eta similar to the one for the functional of Kim et al.
OMM.RelTol 1.d-7      # Relative tolerance for CG energy minimization
OMM.GTol 1.d-3        # Tolerance for gradient in CG energy minimization
OMM.WriteCoeffs true  # Write the coefficients for LWFs
#OMM.ReadCoeffs true  # Read restart for LWFs
OMM.NumLWFs 120       # Number of LWFs considered
BlockSize 32

SCF.Mixer.Method Linear
SCF.Mixer.Weight 0.1

DM.Tolerance 1.d-4
MeshCutoff 100.0 Ry
DM.UseSaveDM true

%block LatticeVectors
  1.000  0.000  0.000
  0.000  0.3910491967  0.000
  0.000  0.000  0.3910491967
%endblock LatticeVectors
